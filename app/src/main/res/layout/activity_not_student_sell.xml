<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotStudentSell">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/house" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myspinner"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/SpinnerRentORSell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Price Ex: 200"/>

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title of publication"/>

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address Ex: Rua do paço"/>



        <EditText
            android:id="@+id/etConstruction_year"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Year Of Construction Ex: 2001"/>

        <EditText
            android:id="@+id/etParking"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Parking Ex: 0 / 1 / 2 ..."/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Elevator "
            android:id="@+id/switchElevator"/>

        <EditText
            android:id="@+id/etDescription"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Description of publication"/>

        <EditText
            android:id="@+id/etPostal_code"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Postal Code Ex: 4700-201"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Floor Ex: 3"
            android:id="@+id/EtFloor"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Bedrooms Ex: 1 / 2 / 3 ..."
            android:id="@+id/EtBedrooms"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="WCs Ex: 1 / 2 / 3 ..."
            android:id="@+id/EtWcs"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Private Gross Area Ex: 2453"
            android:id="@+id/EtPrivateGrossArea"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Total Lot Area Ex: 5054"
            android:id="@+id/EtTotalLotArea"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Shared Room Ex: Sim/Não "
            android:id="@+id/EtSharedRoom"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Number beds Ex: 1 / 2 / 3 ..."
            android:id="@+id/EtNumBeds"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Private wc Ex: Sim/Não"
            android:id="@+id/EtPrivateWc"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Available kitchen Ex: Sim/Não"
            android:id="@+id/EtAvailableKitchen"/>

        <Button
            android:id="@+id/notStudentSell_button_sellHouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="sellOrRentPropertie"
            android:text="Button" />

    </LinearLayout>

</ScrollView>
